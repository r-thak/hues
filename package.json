{
    "name": "hues-and-cues",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev:server": "bun --watch packages/server/src/index.js",
        "dev:client": "bun run --filter @hues/client dev",
        "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
        "build:client": "bun run --filter @hues/client build",
        "start": "bun packages/server/src/index.js"
    },
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}